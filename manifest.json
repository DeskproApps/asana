{
  "name": "@deskpro-apps/asana",
  "title": "Asana",
  "description": "View your Asana tasks linked with Deskpro tickets to streamline communication with users.",
  "version": "1.4.25",
  "appStoreUrl": "https://www.deskpro.com/product-embed/apps/asana",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "entityAssociations": {
    "linkedAsanaTask": {
      "title": "Linked Asana Task",
      "entity": "ticket",
      "type": "external_id"
    }
  },
  "settings": {
    "use_deskpro_saas": {
      "title": "One-Click Installation",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": true,
      "order": 1
    },
    "use_access_token": {
      "title": "Use Access Token",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "default": false,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 2
    },
    "access_token": {
      "title": "Personal Access Token",
      "description": "Asana personal access token, please follow the app setup guide to get this",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token == true",
      "order": 3
    },
    "verify_settings": {
      "title": "",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/verify_settings",
        "height": "30px"
      },
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token == true",
      "order": 4
    },
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 5
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 6
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/callback",
        "height": "100px"
      },
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true && settings.use_access_token != true",
      "order": 7
    },
    "add_comment_when_linking": {
      "title": "Leave a comment on the task in Asana when it is linked to a ticket in Deskpro",
      "description": "",
      "type": "boolean",
      "default": true,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 8
    },
    "default_comment_on_ticket_reply": {
      "title": "Ticket reply as comment",
      "description": "Enable option to add Deskpro replies as task comments when a Asana task is linked to a Deskpro ticket",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "order": 9
    },
    "default_comment_on_ticket_note": {
      "title": "Ticket note as comment",
      "description": "Enable option to add Deskpro notes as task comments when a Asana task is linked to a Deskpro ticket",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "order": 10
    },
    "add_deskpro_tag": {
      "title": "Add \"Deskpro\" label when creating or linking Task",
      "description": "Automatically adding a label to indicate in Asana that the task is currently linked to a Deskpro ticket",
      "type": "boolean",
      "default": true,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 11
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://app.asana.com/api/1.0/.*",
        "methods": ["GET", "POST", "PUT"],
        "timeout": 20
      },
      {
        "url": "https://app.asana.com/-/.*",
        "methods": ["GET", "POST"],
        "timeout": 20
      }
    ]
  }
}